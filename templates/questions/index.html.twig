                <td>{{ question.question }}</td>
                <td>{{ question.answer }}</td>
                <td>{{ question.answername }}</td>
                <td><img src="{{ asset('uploads') }}/{{ question.answerphoto }}" alt="" height="40"></td>
                <td>
                    <a href="{{ path('questions_show', {'id': question.id}) }}">View</a>
                </td>
            </tr>
